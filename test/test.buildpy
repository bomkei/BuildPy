folders {
  include = include
  source  = src
  objects = build
}

build {
  .fast = true
  .use_glob = true
  .no_overwrite = copy_folder

  compiler {
    c   = clangaaaa
    cpp = clang++aaa
  }

  extensions {
    c   = c
    cpp = cc cxx cpp
  }

  flags {
    opt   = -O2
    c     = $opt -Wno-switch -Wimplicit-fallthrough
    cpp   = $c -std=c++20
    link  = -Wl,--gc-sections
  }

  linker = $compiler.cpp
}